generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
}

model Perencanaan {
  id               Int              @id @default(autoincrement())
  nama_perencanaan String           @db.VarChar(255)
  total_progress   Int
  sub_perencanaan  SubPerencanaan[]
}

model SubPerencanaan {
  id                   Int         @id @default(autoincrement())
  perencanaan_id       Int
  nama_sub_perencanaan String      @db.VarChar(255)
  progress             Int
  perencanaan          Perencanaan @relation(fields: [perencanaan_id], references: [id])
  dokumen              Dokumen[]
}

model Dokumen {
  id                 Int             @id @default(autoincrement())
  sub_perencanaan_id Int
  nama_dokumen       String          @db.Text
  status             Boolean
  sub_perencanaan    SubPerencanaan  @relation(fields: [sub_perencanaan_id], references: [id])
  status_laporan     StatusLaporan[]
}

model StatusLaporan {
  id                 Int      @id @default(autoincrement())
  dokumen_id         Int
  tanggal_lapor      DateTime
  tanggal_verifikasi DateTime
  keterangan         String   @db.Text
  dokumen            Dokumen  @relation(fields: [dokumen_id], references: [id])
}
